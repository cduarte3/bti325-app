<div class="row">
    <div class="col-md-12">
        <h2>Employees <a href="/employees/add" class="btn btn-success pull-right">Add New Employee</a> </h2>
        <hr>
        <table width="100%">
        <thead>
            <tr>
            <th>Employee Num</th>
            <th>Full Name</th>
            <th>Email Address</th>
            <th>Address</th>
            <th>Manager ID</th>
            <th>Status</th>
            <th>Department</th>
            <th>Hired on</th>
            </tr>
        </thead>
        {{#each data}}
        <tbody>
            <tr>
                <td>{{employeeNum}}</td>
                <td><a href="/employee/{{employeeNum}}">{{firstName}} {{lastName}}</a></td>
                <td><a href="mailto:{{email}}">{{email}}</a></td>
                <td>{{addressStreet}}, {{addressState}}, {{addressPostal}}</td>
                <td><a href="/employees?manager={{employeeManagerNum}}">{{employeeManagerNum}}</a></td>
                <td><a href="/employees?status={{status}}">{{status}}</a></td>
                <td><a href="/employees?department={{department}}">{{department}}</a></td>
                <td>{{hireDate}}</td>
            </tr>
        </tbody>
        {{else}}
        <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
        </div>
        {{/each}}
        </table>
    </div>
</div>